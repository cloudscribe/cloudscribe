@model cloudscribe.Core.Web.ViewModels.SiteUser.TimeZoneViewModel
@inject IStringLocalizer<CloudscribeCore> sr
@{
    ViewData["Title"] = sr["Update Time Zone"];
    ViewData["BodyClass"] = "manage-section set-timezone";
}
<h2>@ViewData["Title"]</h2>
<form asp-controller="Manage" asp-action="TimeZone" method="post"  role="form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
    <label asp-for="TimeZoneId">@sr["Time Zone"]</label>
    <select asp-for="TimeZoneId" asp-items="Model.AllTimeZones" class="form-control"></select>
    <span asp-validation-for="TimeZoneId" class="text-danger"></span>
</div>
    <div class="form-group">
        <button name="submit" type="submit" class="btn btn-primary">@sr["Update"]</button>
    </div>
</form>
