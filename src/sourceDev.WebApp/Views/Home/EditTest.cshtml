@inject ITinyMceEditorOptionsResolver editorOptionsResolver

@{

    ViewData["Title"] = "Editor Test";
    var mceOptions = await editorOptionsResolver.GetTinyMceEditorOptions();
}



<textarea class="form-control" rows="5" id="comment" name="comment"
          data-tinymce=""
          data-tinymce-config-url="@mceOptions.CustomConfigPath"
          data-tinymce-config-language="@mceOptions.LanguageCode"></textarea>

@section Scripts {

    <script src="~/cr/js/tinymce/tinymce.min.js" asp-append-version="true"></script>
    <script src="~/cr/js/cloudscribe-tinymceeditor-unobtrusive.js" asp-append-version="true"></script>
}


