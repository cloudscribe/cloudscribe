@model cloudscribe.Core.IdentityServerIntegration.Models.ClientItemViewModel
@using cloudscribe.Core.IdentityServerIntegration
@inject IStringLocalizer<CloudscribeIds4Resources> sr
<form class="form-inline" asp-controller="Clients" asp-action="AddClientRedirect">
    <div class="mb-3">
        <label class="form-label" for="Type">@sr["Url"]</label>
        <input class="form-control" id="RedirectUri" name="RedirectUri" data-val="true" data-val-required='@sr["The Url field is required."]'
               aria-required="true" aria-invalid="false" aria-describedby="RedirectUri-error" />
        <span class="invalid-feedback field-validation-valid" data-valmsg-for="RedirectUri" data-valmsg-replace="true"></span>
    </div>
    <input asp-for="SiteId" type="hidden" />
    <input asp-for="ClientId" type="hidden" />
    <button type="submit" class="btn btn-primary">@sr["Add"]</button>
</form>
