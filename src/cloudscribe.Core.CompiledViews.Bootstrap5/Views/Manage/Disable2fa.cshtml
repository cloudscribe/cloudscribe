@inject IStringLocalizer<CloudscribeCore> sr
@{
    ViewData["BodyClass"] = "manage-section manage-disable-2fa";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@sr["This action only disables 2FA."]</strong>
    </p>
    <p>
        @Html.Raw(string.Format(sr["disable_2fa_warning_message"],
            "<a asp-action=\"ResetAuthenticatorWarning\">",
            "</a>"))
    </p>
</div>

<div>
    <form asp-action="Disable2fa" method="post" class="mb-3">
        <button class="btn btn-danger" type="submit">@sr["Disable 2FA"]</button>
    </form>
</div>
