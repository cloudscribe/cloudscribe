@model cloudscribe.Core.Web.ViewModels.SiteUser.ForgotPasswordViewModel
@inject IStringLocalizer<CloudscribeCore> sr
@{
    ViewData["Title"] = sr["Forgot your password?"];
    ViewData["BodyClass"] = "account-section reset-password";
}
<h1>@ViewData["Title"]</h1>
<form asp-controller="Account" asp-action="ForgotPassword" method="post" role="form">
    <h4>@sr["Enter your email."]</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label class="form-label" asp-for="Email">@sr["Email"]</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="invalid-feedback"></span>
    </div>
    <div class="mb-3">
        <button name="submit" type="submit" class="btn btn-primary" asp-route-culture="@CultureInfo.CurrentUICulture.Name">@sr["Submit"]</button>
    </div>
</form>
@section Scripts {
    <script src="~/cr/js/jquery.validate.min.js"></script>
    <script src="~/cr/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/cr/js/unobtrusive-validation-bs4.min.js"></script>
}
