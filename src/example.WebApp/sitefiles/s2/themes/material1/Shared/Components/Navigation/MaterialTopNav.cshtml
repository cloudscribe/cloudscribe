@using cloudscribe.Web.Navigation
@model NavigationViewModel
@functions {
}
@if (Model.HasVisibleChildren(Model.RootNode))
{
    
        <li role="presentation" class='@Model.GetClass(Model.RootNode.Value)'><a href="@Url.Content(Model.AdjustUrl(Model.RootNode))">@Html.Raw(Model.GetIcon(Model.RootNode.Value))@Model.AdjustText(Model.RootNode)</a></li>
        @foreach (var node in Model.RootNode.Children)
        {
            if (!Model.ShouldAllowView(node)) { continue; }
            <li role="presentation" class='@Model.GetClass(node.Value)'><a role="menuitem" href="@Url.Content(Model.AdjustUrl(node))">@Html.Raw(Model.GetIcon(node.Value))@Model.AdjustText(node)</a></li>
        }
   
}
